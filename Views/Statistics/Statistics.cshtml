<!DOCTYPE html>
<html lang="pt-BR">

<head>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>

    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link rel="icon" href="~/images/comida-saudavel.png">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    <link rel="stylesheet" href="~/css/statistics.css" />
    <script src="~/js/statistics.js"></script>

    <style>
        .highcharts-credits{
            display: none;
        }
        #container {
            min-width: 310px;
            max-width: 800px;
            height: 400px;
            margin: 0 auto;
        }

        #userTable th,
        #userTable td {
            color: black;
        }

        .highcharts-figure,
        .highcharts-data-table table {
            min-width: 310px;
            max-width: 800px;
            margin: 1em auto;
        }

        .highcharts-data-table table {
            font-family: Verdana, sans-serif;
            border-collapse: collapse;
            border: 1px solid #ebebeb;
            margin: 10px auto;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }

        .highcharts-data-table caption {
            padding: 1em 0;
            font-size: 1.2em;
            color: #555;
        }

        .highcharts-data-table th {
            font-weight: 600;
            padding: 0.5em;
        }

        .highcharts-data-table td,
        .highcharts-data-table th,
        .highcharts-data-table caption {
            padding: 0.5em;
        }

        .highcharts-data-table thead tr,
        .highcharts-data-table tr:nth-child(even) {
            background: #f8f8f8;
        }

        .highcharts-data-table tr:hover {
            background: #f1f7ff;
        }
    </style>

    <title>Merenda Inteligente</title>
</head>

<body>
    @{
        Layout = "~/Views/Shared/_LayoutMenu.cshtml";
    }
    <div class="container-fluid">
        <h1>Painel de Gráficos</h1>
        <hr class="dropdown-divider" />
        <div class="row">
            <div class="col-md-6">
                <div id="containerPie"></div>
            </div>
            <div class="col-md-6">
                <!-- Gráfico com ID "containerbar" -->
                <div id="containerbar"></div>
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="card p-0">
                    <div class="card-header border-0">
                        <h5 class="mb-0"><i class="fa fa-qrcode fa-fw"></i>Últimos Usuários</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table" id="userTable">
                                    <thead>
                                    </thead>
                                    <tbody id="userTableBody"></tbody>
                                </table>
                                <div id="pagination" class="mr-3 d-flex justify-content-end">

                                    <nav aria-label="...">
                                        <ul class="pagination">
                                            <li class="page-item prevPageButton disabled">
                                                <a class="page-link" id="prevPageButton" style="cursor: pointer;">Anterior</a>
                                            </li>
                                            <li class="page-item nextPageButton">
                                                <a class="page-link" id="nextPageButton" style="cursor: pointer;">Próximo</a>
                                            </li>
                                        </ul>
                                    </nav>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card p-0">
                    <div class="card-header border-0">
                        <i class="fa fa-bell fa-fw"></i> Notificações
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <a href="#" class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fa fa-qrcode fa-fw"></i> Novo QrCode
                                </div>
                                <span class="pull-right text-muted small">
                                    <em>4 minutes ago</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fa fa-user fa-fw"></i> 3 Novos Usuários
                                </div>
                                <span class="pull-right text-muted small">
                                    <em>12 minutes ago</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fa fa-envelope fa-fw"></i> Informativo Enviado
                                </div>
                                <span class="pull-right text-muted small" id="lastDataInformativoNotifications">
                                    <em>some minutes ago</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fa fa-tasks fa-fw"></i> Sem mensagens por enquanto
                                </div>
                                <span class="pull-right text-muted small">
                                    <em>43 minutes ago</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fa fa-upload fa-fw"></i> Server Rebooted
                                </div>
                                <span class="pull-right text-muted small">
                                    <em>11:32 AM</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fa fa-bolt fa-fw"></i> Server Crashed!
                                </div>
                                <span class="pull-right text-muted small">
                                    <em>11:13 AM</em>
                                </span>
                            </a>
                            <a href="#" class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fa fa-warning fa-fw"></i> Server Not Responding
                                </div>
                                <span class="pull-right text-muted small">
                                    <em>10:57 AM</em>
                                </span>
                            </a>
                        </div>
                        <a href="#" class="btn btn-default btn-block">View All Alerts</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>
</html>
